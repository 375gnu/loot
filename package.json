{
  "name": "loot",
  "author": "Oliver Hamlet <oliver.hamlet@gmail.com>",
  "version": "0.9.1",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/loot/loot.git"
  },
  "bugs": {
    "url": "https://github.com/loot/loot/issues"
  },
  "homepage": "https://github.com/loot/loot",
  "private": true,
  "dependencies": {
    "decompress": "^4.0.0",
    "decompress-unzip": "^4.0.1",
    "fs-extra": "^3.0.1",
    "github-api": "^3.0.0",
    "jed": "^1.1.1",
    "jed-gettext-parser": "^1.0.0",
    "lodash": "^4.17.5",
    "marked": "^0.3.17",
    "polymer-analyzer": "^2.1.0",
    "replace": "^0.3.0",
    "request": "^2.79.0"
  },
  "devDependencies": {
    "bower": "^1.7.1",
    "chai": "^3.5.0",
    "eslint": "^4.11.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.8.0",
    "eslint-plugin-html": "^4.0.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.3.1",
    "karma": "^1.3.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-mocha": "^1.3.0",
    "mkdirp": "^0.5.1",
    "mocha": "^3.0.1",
    "prettier": "^1.8.2"
  },
  "scripts": {
    "test": "karma start",
    "lint": "eslint --ignore-path .gitignore ."
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "script"
    },
    "env": {
      "es6": true,
      "mocha": true,
      "amd": true,
      "node": true,
      "browser": true
    },
    "globals": {
      "loot": false,
      "should": false,
      "Polymer": false
    },
    "plugins": [
      "html",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "airbnb-base",
      "prettier"
    ],
    "rules": {
      "curly": [
        "error",
        "all"
      ],
      "linebreak-style": "off",
      "no-confusing-arrow": "error",
      "no-param-reassign": [
        "error",
        {
          "props": false
        }
      ],
      "no-underscore-dangle": "off",
      "prefer-destructuring": "off",
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "singleQuote": true
  }
}
