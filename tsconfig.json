{
    "compilerOptions": {
        "outDir": "./build/dist",
        "allowJs": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "module": "es6",
        "target": "es2018",
        "jsx": "react",
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictBindCallApply": true,
        "strictNullChecks": false,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": false,
        "strict": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "./src/gui/html/**/*",
        "./src/tests/gui/html/**/*"
    ]
}
